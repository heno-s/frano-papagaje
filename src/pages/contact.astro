        flex-direction: column;
        gap: 40px;
    }

    .contacts,
    .contact {
        font-size: 1.3rem;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .contacts {
        gap: 18px;
    }

    .contact {
        gap: 5px;
        text-align: center;
    }

    .label {
        font-weight: bold;
    }

    .map {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    .map-title {
        font-size: 1.4rem;
        font-weight: bold;
    }

    @media (min-width: 950px) {
        h1 {
            margin-bottom: 120px;
        }
        .main {
            flex-direction: row;
            justify-content: center;
            align-items: center;
            gap: 150px;
        }
        iframe {
            width: 400px;
            height: 300px;
        }

        .contact {
            font-size: 1.6rem;
        }
        .contacts {
            gap: 30px;
        }
    }
</style>
