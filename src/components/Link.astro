---
export interface Props {
    href: string;
    label: string;
}

const { href, label } = Astro.props as Props;
---

<a href={href}>{label}</a>

<style>
    a {
        text-decoration: none;
        background-color: #313131;
        padding: 10px 20px;
        border-radius: 10px;
        box-shadow: 3px 3px 8px #000;
        border: 1px solid #000;
        font-weight: bold;
        flex: 1;
        max-width: 150px;
        text-align: center;
    }
</style>
